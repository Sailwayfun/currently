{
  "manifest_version": 3,
  "name": "USD to TWD Converter",
  "version": "1.0",
  "description": "快速查詢美元轉台幣的匯率",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting"]
}
